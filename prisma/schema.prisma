generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int       @id @default(autoincrement())
  email                 String    @unique
  name                  String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  address               String?
  avatar                String?
  gender                Gender?
  password              String
  phone                 String?
  role                  Role      @default(USER)
  deletedAt             DateTime?
  refreshToken          String?
  refreshTokenExpiresAt DateTime?
}

enum Gender {
  MALE   @map("1")
  FEMALE @map("2")
}

enum Role {
  SYSTEM_ADMIN
  DEPT_ADMIN
  USER
}
